<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#56C55B"
                android:endColor="#00AA9A"/>
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="#500202"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#54BF58"
                android:endColor="#01B1A1"/>
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="#500202"/>
        </shape>
    </item>
</selector>