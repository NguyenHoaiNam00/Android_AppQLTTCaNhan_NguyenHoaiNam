<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#E16767"
                android:endColor="#D82D2D"/>
            <corners android:radius="6dp"/>
            <stroke android:width="2dp" android:color="#500202"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#E85151"
                android:endColor="#E11010"/>
            <corners android:radius="6dp"/>
            <stroke android:width="2dp" android:color="#500202"/>
        </shape>
    </item>
</selector>